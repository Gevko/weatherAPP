<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.cities.details.CityDetailsFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/city_name_details_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leiria"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/temp_details_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leiria"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/city_name_details_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/green"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/min_temp_details_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leiria"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/temp_details_tv"
        app:layout_constraintTop_toBottomOf="@id/city_name_details_tv"
        android:textColor="@color/blue"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/max_temp_details_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leiria"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/min_temp_details_tv"
        app:layout_constraintTop_toBottomOf="@id/city_name_details_tv"
        android:textColor="@color/red"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/wind_speed_details_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leiria"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/temp_details_tv"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/pressure_details_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leiria"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wind_speed_details_tv"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/humidity_details_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leiria"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pressure_details_tv"
        />

</androidx.constraintlayout.widget.ConstraintLayout>